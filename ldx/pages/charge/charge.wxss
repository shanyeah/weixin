/* charge.wxss */
.zan-col {
  height: 74px;
  text-align: center;
  color: #000;
}

.zan-col.selected {
  border:2px solid #39a9ed; 
}

.charge_empty_text {
  text-align: center;
  color: gray;
  font-size: 16px;
  height: 44px;
  line-height: 44px;
}

.charge_item {
  margin: 6px 6px;
  width: 88%;
}

.charge_item.selected {
  border:2px solid #39a9ed; 
}

.charge_item_value {
  color: black;
  font-size: 18px;
  line-height: 32px;
}

.charge_item_present {
  color: red;
  font-size: 14px;
  height: 32px;
  line-height: 24px;
}

.charge_input {
  margin-left: 12px;
  height: 44px;
}

.charge_footer {
  flex: 1;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
  background-color: #666;
}

.charge_text {
  display: inline-block;
  color: white;
  font-size: 16px;
}

.charge_present_text {
  margin-left: 4px;
  display: inline-block;
  color: red;
  font-size: 16px;
}

.charge_button {
  background: #1ad450;
  color: white;
  font-size: 18px;
  text-align: center;
  height: 50px;
}

.charge_button.disable {
  background: lightgray;
}
