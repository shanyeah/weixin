.user_detail_view {
  margin-top: 10px;
  display: flex;
  width: 100%;
  height: 40px;
  color: white;
  font-size: 12px;
}

.user_money_view {
  display: flex;
  flex-direction:column;
  align-items:center;
  width: 33%;
  height: 40px;
  color: #515151
}

.user_detail_line {
  background: #eeeeee;
  width: 1px;
  height: 36px;
}

.card_empty_view {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
}

.card_empty_text {
  margin-top: 10px;
  color: #515151;
  font-size: 15px;
}

.card_view {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 180px;
  background: white;
}

.cash_text {
  color: #987C4D;
}

.card-cell {
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 5px;
}


