/**index.wxss**/
.head_img {
  width: 100%; 
  height: 200px; 
  background-color: #eeeeee;
}

swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}
.swiper-container{
  position: relative;
}
.swiper-container .swiper{
  height: 300rpx;
}
.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
}

.swiper_text {
  color: white;
  font-size: 14px;
  position: absolute;
  text-align: center;
  width: 100%;
  bottom: 24px;
}

.name_cell {
  font-weight: bold;
  font-size: 16px;
}

.des_cell {
  color: #515151;
}

.star_icon {
  width:16px;
  height:16px;
}

.nav_cell {
  padding: 12px 0px;
  display:flex;
  background: white;
  justify-content: space-between;
}

.nav_item {
  margin-left: 15px;
  margin-right: 15px;
  display:flex;
  width:54px;
  flex-direction:column;
  align-items:center;
}

.nav_icon {
  width:36px;
  height:36px;
  margin-bottom:10px;
}

.nav_text {
  color: #515151;
}

.stg_cell {
  display: flex;
  background: #fff;
  width: 100%;
  height: 100px;
}

.stg_image {
  margin-left: 12px;
  margin-right: 6px;
  margin-top: 10px;
  width: 70px;
  height: 80px;
  background-color: #eeeeee;
}

.stg_rate {
  position: absolute;
  display: flex;
  align-items: center;
  margin-left: 10px;
  margin-top: 20px;
  background: #d4237a;
  z-index:1;
}

.stg_rate_text {
  margin-left: 6px;
  font-size: 13px; 
  color: white;
}

.stg_rate_img {
  margin-left: 6px;
  margin-right: 6px;
  width:13px;
  height:13px;
}

.stg_name {
  margin-top: 10px;
  margin-left: 6px;
  font-size: 15px;
}

.stg_score {
  margin-left: 6px;
  color: orange;
  font-size: 13px;
}

.stg_desc {
  margin-top: 3px;
  margin-left: 6px;
  font-size: 12px;
  max-width: 12rem;   
  white-space:nowrap; 
  text-overflow:ellipsis;   
  overflow:hidden; 
  height: 20px;
  color: #707070;
}

.stg_distance {
  float: right;
  font-size: 12px;
  color: #707070;
  margin-top: 75px;
  margin-right: 12px;
}

.stg_separator {
  margin-left: 12px;
  width: 100%;
  height: 1px;
  background: #e9e9e9;
}